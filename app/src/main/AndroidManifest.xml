<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gamr.gamr" >

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/BasicTheme" >

        <!-- Splash screen -->
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/BasicTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameProfileActivity"
            android:label="@string/title_activity_league_profile"
            android:theme="@style/BasicTheme" >
        </activity>
        <activity
            android:name=".FindGamesActivity"
            android:label="@string/title_activity_find_games"
            android:theme="@style/BasicTheme" >
        </activity>
        <activity
            android:name=".ConversationActivity"
            android:label="@string/title_activity_conversation" >
        </activity>
    </application>

</manifest>
